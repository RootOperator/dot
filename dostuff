LINE=""

if [ $1 ]; then
    LINE=$1
else
    LINE="more stuff"
fi

cp ~/.bashrc .
cp ~/.Xdefaults .
cp ~/.compton.conf .
cp ~/.vimrc .
cp ~/.xinitrc .
cp ~/.zshrc . 
cp ~/.config/i3/ ./.config/ -r
cp ~/.config/i3status/ ./.config/ -r
cp ~/.config/ranger/ ./.config/ -r

git add -A
git commit -m "$LINE"
git push origin master
