#!/bin/bash


gh_username=RootOperator
project_name=$1

_help(){
    echo "Usage: create_git github_project_name <options>

    Options:
        -h, --help      Shows this screen.
        -n, --new       Create new directory and initializes the git project
                            in the new folder.
        -u, --user      Set github user, Default is $gh_username.
    "
    exit
}


set_user(){
    if [ $1 ]; then
        gh_username=$1
    else
        _help
    fi
}


init(){
    git init
    git remote add origin https://github.com/$gh_username/$project_name
}    


if [ $1 ]; then

    if [[ $1 == *"-"* ]]; then
        _help
    fi

    for (( i=1; i<=$#; i++ )); do
        if [ ${!i} == "-n" ] || [ ${!i} == "--new" ]; then
            mkdir $project_name
            cd $project_name 
        fi

        if [ ${!i} == "-u" ] || [ ${!i} == "--user" ]; then
            j=$((i+1))
            set_user ${!j}
        fi
    done  

    init
else
    _help
fi
