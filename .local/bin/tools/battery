#!/bin/bash

BAT=$(acpi -b | grep -E -o '[0-9][0-9]?%')
STATE=$(acpi -b | grep -P -o '(?<=: )\w+')

if [ $BAT == "00%" ]
then
    BAT="1$BAT"
fi

if [ $STATE = "Charging" ]
then
    echo "Battery: âš¡$BAT"
else
    echo "Battery: $BAT"
fi

# Set urgent flag below 5% or use orange below 20%
[ ${BAT%?} -le 5 ] && exit 33
[ ${BAT%?} -le 20 ] && echo "#FF8000"

exit 0
